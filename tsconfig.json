{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict":true,
    "moduleResolution": "node",
    "esModuleInterop":true,
    "allowSyntheticDefaultImports":true,
    "strictNullChecks": true,
    "baseUrl":".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/jest-setup.ts",
    "src",
    "config",
    "webpack.config.ts"
  ]
}